# QURE Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=QURE
APP_VERSION=0.1.0
DEBUG=false

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Database
# For local development:
DATABASE_URL=postgresql+asyncpg://qure:qure@localhost:5432/qure
# For Docker:
# DATABASE_URL=postgresql+asyncpg://qure:qure@postgres:5432/qure
DB_ECHO=false

# LLM Provider (anthropic, openai, groq, huggingface, ollama)
LLM_PROVIDER=anthropic

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Groq
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_MAX_TOKENS=4096
GROQ_TEMPERATURE=0.7

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
HUGGINGFACE_MAX_TOKENS=4096
HUGGINGFACE_TEMPERATURE=0.7

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=4096
OLLAMA_TEMPERATURE=0.7

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=60
AGENT_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
